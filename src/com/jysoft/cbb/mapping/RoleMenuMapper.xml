<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jysoft.cbb.dao.RoleMenuMapper">
	<resultMap type="roleMenuVo" id="roleMenuVo">
		 <id     property="id"   column="id"      />
		 <result property="roleId"     column="ROLE_ID"        />
		 <result property="menuId"     column="Menu_ID" />
	</resultMap>
	
	<!-- 根据角色id删除用户所对应的角色 -->
	<delete id="deleteByRoleId" parameterType="roleVo">
		DELETE FROM T_ROLE_MENU T WHERE T.ROLE_ID=#{roleId}
	</delete>
	
	<!--插入菜单和角色的对应关系 -->
	<insert id="insert" parameterType="roleMenuVo">
		INSERT INTO T_ROLE_MENU(
		 ID     
		,ROLE_ID   
		,MENU_ID
		)VALUES(
		#{id },
		#{roleId },
		#{menuId }
		)
	</insert>
</mapper>